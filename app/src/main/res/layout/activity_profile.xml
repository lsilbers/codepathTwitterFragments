<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lsilbers.apps.twitternator.activities.ProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:id="@+id/rlProfileHeader">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivAvatar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/ivAvatar"
            android:layout_toEndOf="@id/ivAvatar"
            android:layout_toRightOf="@id/ivAvatar"
            android:id="@+id/tvFullName"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvScreenName"
            android:layout_below="@id/tvFullName"
            android:layout_toEndOf="@id/ivAvatar"
            android:layout_toRightOf="@id/ivAvatar"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvScreenName"
            android:layout_toRightOf="@id/ivAvatar"
            android:layout_toEndOf="@id/ivAvatar"
            android:id="@+id/tvTagline"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvFollowers"
            android:layout_below="@id/tvTagline"
            android:layout_toRightOf="@id/ivAvatar"
            android:layout_toEndOf="@id/ivAvatar"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvFollowing"
            android:layout_below="@id/tvTagline"
            android:layout_toRightOf="@id/tvFollowers"
            android:layout_toEndOf="@id/tvFollowers"
            />

    </RelativeLayout>

    <FrameLayout
        android:layout_below="@id/rlProfileHeader"
        android:id="@+id/flProfileTweets"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        ></FrameLayout>
</RelativeLayout>
